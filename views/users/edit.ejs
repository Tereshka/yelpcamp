<%include ../partials/header%>

<div class="container">
	<a href="/campgrounds">Go Back</a>
	<div class="row text-center">
		<h1 class="mx-auto">Edit <%=user.username%>'s profile</h1>
	</div>
	<div class="row text-center">
		<form class="m-auto w-50" action="/users/<%=user.username%>?_method=PUT" method="POST">
			<div class="form-group">
			    <label>Username</label>
			    <input class="form-control" type="text" placeholder="username" name="user[username]" value="<%=user.username%>">
		  	</div>
		  	<div class="form-group">
			    <label>Avatar URL</label>
			    <input class="form-control" type="text" placeholder="image url" name="user[avatar]" value="<%=user.avatar%>">
		  	</div>
		  	<div class="form-group">
			    <label>First Name</label>
			    <input class="form-control" type="text" placeholder="first name" name="user[firstName]" value="<%=user.firstName%>">
		  	</div>
		  	<div class="form-group">
			    <label>Last Name</label>
			    <input class="form-control" type="text" placeholder="last name" name="user[lastName]" value="<%=user.lastName%>">
		  	</div>
		  	<div class="form-group">
			    <label>Email</label>
			    <input class="form-control" type="text" placeholder="email" name="user[email]" value="<%=user.email%>">
		  	</div>
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
	</div>
</div>


<%include ../partials/footer%>